<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="shortcut icon" type="image/x-icon" href="~/Reffrence/store_ico.ico">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="height:55px">
            <div class="container">
                <div style="display: inline-table; vertical-align: central;">
                    <img src="/Reffrence/store_ico.png" alt="store icon" class="navbar-brand" style="width: 30px; float: left;">
                    <h3 class="navbar-brand" asp-area="" asp-controller="Products" asp-action="Index"
                        style="color: #35b448; font-weight: 500; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; ">Fruit
                        <span style="color: #f7921e; font-weight: 500; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; ">Shop</span>
                    </h3>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Privacy">Privacy</a>
                        </li>                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br/>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Fruit Shop - <a asp-area="" asp-controller="Products" asp-action="Privacy">Privacy</a> - 
                                       <a asp-area="" asp-controller="Products" asp-action="Worksheet">Worksheet</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
