@{
    @model Product
    ViewData["Title"] = "Product Details";
    Product product = (Product)ViewData["data"];
}
<h2 class="text-left text-secondary py-3">Product Details</h2>
<div class="row mt-5">
    <div class="col-3"></div>
        <div class="col-md-3 py-2 col-4" style="display:flex">
            <div class="card bg-light text-center" style="flex:5">
                <img src="/Reffrence/@(product.ProductName + ".png")" alt="@product.ProductName pic" class="card-img-top" style="width: auto; height: 200px">
                <div class="card-body d-flex flex-column" style="height: auto; margin-bottom: 1px;">
                        <h3 class="card-title">@product.ProductName</h3>
                        <p class="card-text">@product.ProductDetails</p>
                        <p class="card-text border-bottom" style="text-align:center">@(product.ProductPrice + ".00 SR")</p>

                    <a id="btnDetails" href="#" class="btn btn-secondary mt-auto" style="width:auto; height:auto; margin: 0 auto; float:none; margin-bottom:1px;">Order now</a>
                </div>
            </div>
        </div>
    </div>
